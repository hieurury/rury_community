            <p>Chưa có tài khoản? <a class="text-blue-500" href="/account/register">Đăng ký</a></p>
        </div>
    </div>
    <div class="w-3/5">
        <div class="flex items-center flex-col">
            <h1 class="text-4xl uppercase tracking-widest font-semibold">Đăng Nhập</h1>
            <form 
            action="/account/login/post"
            method="POST"
            class="w-1/2 p-12 shadow-md">
                <div class="border-2 my-6 flex items-center focus-within:border-blue-400">
                    <label class="mx-1 font-semibold" for="login-email">Email: </label>
                    <input class="flex-1 py-2 focus:border-none focus:outline-none" type="text" id="login-email" name="email">
                </div>
                <div class="border-2 my-6 flex items-center focus-within:border-blue-400">
                    <label class="mx-1 font-semibold" for="login-password">Mật Khẩu: </label>
                    <input class="flex-1 py-2 focus:border-none focus:outline-none" type="password" id="login-password" name="password">
                    <div id="password-eye-toggle" class="text-xl pr-1 hover:text-orange-400 hover:cursor-pointer">
                        <span id="visibility">
                            <i class="bi bi-eye-fill"></i>
                        </span>
                        <span id="unvisibility" class="hidden">
                            <i class="bi bi-eye-slash-fill"></i>
                        </span>
                    </div>
                </div>
                <button 
                class="text-xl text-slate-50 bg-green-400 w-full py-1 rounded-sm
                hover:shadow-md hover:text-slate-50 hover:bg-green-500" 
                type="submit">Đăng nhập</button>
            </form>
        </div>
    </div>
    {{/if}}
</div>

<script>
    //toggle password visibility
    const passwordEyeToggles = document.querySelectorAll('#password-eye-toggle');
    console.log(passwordEyeToggles);
    passwordEyeToggles.forEach(toggle => {
        toggle.addEventListener('click', () => {
            const visibility = toggle.querySelector('#visibility');
            const unvisibility = toggle.querySelector('#unvisibility');
            const passwordInput = toggle.previousElementSibling;
            if (visibility.classList.contains('hidden')) {
                visibility.classList.remove('hidden');
                unvisibility.classList.add('hidden');
                passwordInput.type = 'password';
            } else {
                visibility.classList.add('hidden');
                unvisibility.classList.remove('hidden');
                passwordInput.type = 'text';
            }
        });
    });

    //validate login form
    const loginForm = document.querySelector('form');
    loginForm.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = loginForm.querySelector('#login-email').value;
        const password = loginForm.querySelector('#login-password').value;
        if (email === '' || password === '') {
            alert('Vui lòng điền đầy đủ thông tin');
        } else {
            loginForm.submit();
        }
    });
</script>